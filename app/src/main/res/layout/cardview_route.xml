<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/route_title"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/route_distance"
            android:textSize="14sp"
            android:textColor="#7F7F7F"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_text_distance"
            android:drawableLeft="@drawable/ic_text_distance"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/route_time"
            android:textSize="14sp"
            android:textColor="#7F7F7F"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_text_time"
            android:drawableLeft="@drawable/ic_text_time"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/route_addr"
            android:textSize="14sp"
            android:textColor="#7F7F7F"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C3C3C3"
            app:columnCount="2"
            app:rowCount="1">

            <LinearLayout
                android:id="@+id/emulate_navi"
                android:layout_height="wrap_content"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                android:layout_marginEnd="1px"
                android:layout_marginRight="1px">

                <TextView
                    android:drawableStart="@drawable/ic_text_simuler"
                    android:drawableLeft="@drawable/ic_text_simuler"
                    android:text="模拟导航"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gps_navi"
                android:layout_height="wrap_content"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                android:layout_marginStart="1px"
                android:layout_marginLeft="1px">

                <TextView
                    android:drawableStart="@drawable/ic_text_car"
                    android:drawableLeft="@drawable/ic_text_car"
                    android:text="实时导航"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>