<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_searched"
    android:visibility="invisible"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/card_searched_linear"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="中石化加油站"
                android:id="@+id/card_searched_name"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/card_searched_distance"
                android:textSize="16sp"
                android:textColor="#7F7F7F"
                android:drawableStart="@drawable/ic_text_distance"
                android:drawableLeft="@drawable/ic_text_distance"
                android:layout_marginTop="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/card_searched_addr"
                android:textSize="16sp"
                android:textColor="#7F7F7F"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/card_searched_navi"
            android:drawableStart="@drawable/ic_text_go"
            android:drawableLeft="@drawable/ic_text_go"
            android:text=" 到这里"
            android:textSize="24sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:drawablePadding="1dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_alignTop="@id/card_searched_linear"
            android:layout_alignBottom="@id/card_searched_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>